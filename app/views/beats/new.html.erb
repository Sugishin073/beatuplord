<!-- app/views/beats/new.html.erb -->
<h1>新しいビートをアップロード</h1>

<%= form_with model: @beat, local: true do |form| %>
  <div>
    <%= form.label :title, "タイトル" %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :audio_file, "オーディオファイル(MP3またはWAV)" %><br>
    <%= form.file_field :audio_file %>
    <p>アップロード可能な形式: MP3, WAV</p>
  </div>

  <div>
    <%= form.submit "アップロード" %>
  </div>
<% end %>