<h2>チャット</h2>

<div class="messages">
  <% @messages.each do |message| %>
    <div class="<%= message.user == current_user ? 'my-message' : 'other-message' %>">
      <strong><%= message.user.nickname %></strong>
      <p><%= message.content %></p>
    </div>
  <% end %>
</div>

<%= form_with model: [@room, Message.new], local: true do |form| %>
  <div class="form-group">
    <%= form.text_area :content, rows: 3, placeholder: "メッセージを入力", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit "送信", class: "btn btn-primary mt-2" %>
  </div>
<% end %>